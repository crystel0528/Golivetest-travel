{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["k6", "node", "@playwright/test"],
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",                        // root of project
    "paths": {
      "@helpers/*": ["tests/functional/utils/helpers/*"],  // correct path
      "@data/*": ["tests/functional/data/*"]       // if you have a data folder under functional
    }
  },
  "include": [
    "tests/**/*.ts"
, "tests/performance/k6/scenarios/bookingload.js"  ]
}
